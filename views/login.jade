extends layout


block content
    if logged_in
        div
            h1 You are Logged-In.
            | Transferring you to home page in 5 seconds...
            script.
                setTimeout(function () {
                    location.href = '/';
                }, 5000)
    else
        if error
            h1
                b ERROR REGISTERING NEW USER: #{error}
        h1#here login
        form(action="/login" method='post')
            h2 enter your name
            input#accNumber(type='text', name='accNumber')
            h2 enter password
            input#pass(type='text', name='pass')
            br

            input#submit(type='submit' value='done')